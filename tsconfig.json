{
  "compilerOptions": {
    "target": "es2017",                          
    "module": "commonjs", 
    "lib": ["es6"],
    "outDir": "./build",
    "rootDir": "./",
    "allowJs": true,          
    "removeComments": true,       
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],                     
    "resolveJsonModule": true,      
    "esModuleInterop": true,                  
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true,
    "pretty": true,
    "baseUrl": ".",
    "paths":{
      "@infra/*": ["./src/infra/*"],
      "@core/*": ["./src/core/*"]
    },
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "sourceMap": true,
  },
  "include": ["src/**/*.ts", "server.ts", "src/server.js"  ],
  "exclude": [
    "node_modules"
  ]
}
